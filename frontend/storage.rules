rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    // Helper function to check for admin custom claim
    function isAdmin() {
      return request.auth != null && request.auth.token.admin == true;
    }

    // Helper function to check for admin emails (for backend operations)
    function isAdminEmail() {
      return request.auth != null && 
        (request.auth.token.email == 'austinbryanfilm@gmail.com' ||
         request.auth.token.email.matches('.*@tributestream.com'));
    }

    function isOwner(memorialId) {
      return firestore.get(/databases/(default)/documents/memorials/$(memorialId)).data.creatorUid == request.auth.uid;
    }

    function isFamilyMember(memorialId) {
      // Check if an accepted invitation exists for this user and memorial
      let invitationId = request.auth.uid + '_' + memorialId;
      return firestore.exists(/databases/(default)/documents/invitations/$(invitationId)) &&
             firestore.get(/databases/(default)/documents/invitations/$(invitationId)).data.status == 'accepted';
    }

    // Blog images and assets - allow admin access for FireCMS
    match /blog/{allPaths=**} {
      allow read; // Public read for blog images
      allow write: if isAdmin() || isAdminEmail();
    }

    // Public videos (homepage background, about us, etc.)
    // - Publicly readable for marketing/promotional content
    // - Writable by admins for content management
    match /tributestream_advertisment{allPaths=**} {
      allow read;
      allow write: if isAdmin() || isAdminEmail();
    }
    
    match /tributestream_-_about_us{allPaths=**} {
      allow read;
      allow write: if isAdmin() || isAdminEmail();
    }
    
    match /Background.jpg {
      allow read;
      allow write: if isAdmin() || isAdminEmail();
    }

    // General admin uploads folder
    match /admin/{allPaths=**} {
      allow read, write: if isAdmin() || isAdminEmail();
    }

    // Memorial photos:
    // - Publicly readable.
    // - Writable by the memorial owner OR an invited family member OR admins.
    match /memorials/{memorialId}/{allPaths=**} {
      allow read;
      allow write: if request.auth != null && (isOwner(memorialId) || isFamilyMember(memorialId) || isAdmin() || isAdminEmail());
    }

    // Fallback rule for admin access to any file (for backend operations)
    match /{allPaths=**} {
      allow read, write: if isAdmin() || isAdminEmail();
    }
  }
}
